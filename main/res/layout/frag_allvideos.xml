<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_Search_book"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="search"
            android:drawableEnd="@drawable/ic_home_black_24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@drawable/rounded_edittext"
            android:drawableRight="@drawable/ic_home_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Popular Books"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#F1F2F6"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trending_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layoutDirection="rtl"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Newest"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#F1F2F6"
            android:padding="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_Newest_Book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    </LinearLayout>


</ScrollView>
