<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_founder_1"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/theme_color"
    app:strokeWidth="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="80dp">

        <ImageView
            android:id="@+id/team_mem_img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/featured1"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/team_mem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/raleway_bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Member Name"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/developer_name"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25" />

        <ImageView
            android:id="@+id/team_mem_img_linkedin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/linkedin" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />

        <ImageView
            android:id="@+id/team_mem_img_insta"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/insta" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>